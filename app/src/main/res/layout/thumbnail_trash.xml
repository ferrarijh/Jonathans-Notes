<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_thumbnail_trash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardElevation="1.5dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_thumbnail_trash_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:paddingTop="3dp"
                android:gravity="end"
                android:text="2000-00-00"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/trashedText"/>
            <TextView
                android:id="@+id/tv_thumbnail_trash_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="@color/trashedText"/>
            <TextView
                android:id="@+id/tv_thumbnail_trash_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:maxLines="5"
                android:lineSpacingMultiplier="1.4"
                android:textColor="@color/trashedText"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/trash"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
